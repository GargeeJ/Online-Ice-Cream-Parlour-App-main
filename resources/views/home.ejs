<section class="hero py-16">
    <div class="container mx-auto flex items-center justify-between">
        <div class="w-1/2 ml-6">
            <!-- <h6 class="text-xl font-bold"><em>Are you hungry?</em></h6> -->
            <h1 class="text-2xl md:text-4xl font-bold">Indulge in Scoops of Joy: <br> Discover the Ultimate Online Ice Cream Experience!</h1>
           <a href="/cart"> <button class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary">Order Now</button></a>
        </div>
        <div class="w-1/2">
            <img src="/img/preview.png" alt="">
        </div>
    </div>
</section>
<section class="menu max-w-6xl container mx-auto py-8">
    <h1 class="text-3xl mt-3 ml-10 font-bold mb-8">All Ice Creams</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-16">
        <% icecreams.forEach(function(icecream) { %>
        <div class="w-full md:w-64 border p-5 hover:shadow-md  divide-y-4 rounded-lg">
            <img class="h-25 mb-4 mx-auto" src="/img/ice-creams/<%= icecream.image %>" alt="">
            <div class="text-center">
                <h2 class="mb-4 mt-4 text-lg"><%= icecream.name %></h2>
                <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= icecream.size %></span>
                <div class="flex items-center justify-around mt-6">
                    <span class="font-bold text-lg">â‚¹<%= icecream.price %></span>
                    <button data-icecream="<%= JSON.stringify(icecream) %>"
                        class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                        <span>+</span>
                        <span class="ml-4">Add</span>
                    </button>
                </div>
            </div>
        </div>
        <% }) %>

    </div>
</section>